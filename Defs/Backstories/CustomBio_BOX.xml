  <PawnBioDef>
    <defName>CustomBio_BOX_A</defName>
    <name>
      <first>马特</first>
      <last>弗里曼</last>
      <nick>搞事</nick>
    </name>
    <gender>Male</gender>
    <childhoodDef>CustomBS_BOX01_Child</childhoodDef>
